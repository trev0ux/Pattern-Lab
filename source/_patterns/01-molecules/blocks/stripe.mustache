<div class="c-stripe">

    <div class="c-stripe__left-container">
		<a href="{{ url }}" class="c-stripe__link">
            {{> atoms-landscape:c-stripe__img }}
		</a>
    </div>

    <div class="c-stripe__right-container">
		<h3 class="c-stripe__title"><a href="{{ url }}" class="c-stripe__title-link">{{ headline}}</a></h3>
		{{> molecules-field }}
        {{# cartPrice }}
		<div class="c-stripe__meta">
            <label class="c-stripe__meta-label">{{ label }}</label>
            <span class="c-stripe__meta-span">{{ meta }}</span>
        </div>
        {{/ cartPrice }}
    </div>

</div><!--end c-stripe-->
